<div class='card mb-3 p-1'>
  <div class='row'>
    <div class='col-2'>
      <img src='{{image}}' />
    </div>
    <div class='col-4 mt-2'>
      <h5>{{name}}</h5>
      {{description}}
    </div>
    <div class='col-2 mt-4'>
      {{#with price}}
      {{title}}
      <h5>{{value}}</h5>
      {{/with}}
    </div>
    <div class='col-2 mt-5'>
      {{amount}}
    </div>
    <div class='col-2'>
      {{#each buttons}}
      {{#if isPrimary}}
      <a href='#' class='mt-2 btn btn-primary'>{{text}}</a>
      {{else}}
      <a href='#' class='mt-3 btn btn-outline-danger'>{{text}}</a>
      {{/if}}
      {{/each}}
    </div>
  </div>
</div>