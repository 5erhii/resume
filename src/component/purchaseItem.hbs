<div>
    <div class=' row '>
        <div class='col-4 mt-4'>
            {{number}}
            <h5 class="mt-2">{{status}}</h5>
        </div>
        <div class='col-2 mt-4'>
            {{#with amount}}
            {{title}}
            <h5 class="mt-2">{{value}}</h5>
            {{/with}}
        </div>
        <div class='col-4 '>
            <div class="row">
                {{#each images}}
                <div class="col-4">
                    <div>
                        <img src='{{this}}' />
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class='col-2 mt-4'>
            {{#with button}}
            <a href='{{link}}' class='mt-2 btn btn-primary'>{{text}}</a>
            {{/with}}
        </div>
    </div>
    <hr>
</div>