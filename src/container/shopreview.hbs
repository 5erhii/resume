<main>
    <div class="row mt-5">
        {{#with formBlock}}
        <div class="col-8">
            <div class=' mb-4 display-5'>
                <b>{{header}}</b>
            </div>
            {{#with rating}}
            <p>{{title}}: {{value}}</p>
            {{/with}}
            <div class="mb-5">
                {{#with actionBlock}}
                <div class="nav nav-tabs mb-5">
                    {{#each tabs}}
                    <div class="nav-item col-3">
                        <a href='#' class='nav-link {{#if isActive}}active{{/if}}'>{{text}}</a>
                    </div>
                    {{/each}}
                </div>
                <hr>
                <div class="card p-3 mt-5 mb-5">
                    {{#with report}}
                    <p>{{title}}</p>
                    <div>
                        {{#with button}}
                        <a href='{{link}}' class='btn btn-secondary me-2'>{{text}}</a>
                        {{/with}}
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
            <hr>
            <div class=" mt-5 mb-5">
                {{#with feedbackBlock}}
                <div class='display-6 mb-5 '>
                    <b>{{title}}</b>
                </div>
                <div class="mt-5">
                    {{#each buttons}}
                    {{#if isWarning}}
                    <a href='{{link}}' class='btn btn-warning me-2'>{{text}}</a>
                    {{/if}}
                    {{#if isSuccess}}
                    <a href='{{link}}' class='btn btn-success me-2'>{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                    <a href='{{link}}' class='btn btn-danger'>{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>
        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card p-4 mt-2  mb-3">
                <div class="mb-2">
                    <img src='{{photo}}' />
                </div>
                <b>{{name}}</b>
            </div>
            <div class="card p-4 mt-2  mb-3 ">
                <div class="mb-2">
                    <b>{{price}}</b>
                    {{#if inMarket}}
                    Є в наявності
                    {{/if}}
                    {{#each buttons}}
                    <div class="mt-2">
                        {{#if isPrimary}}
                        <a href='{{link}}' class='btn btn-primary me-2'>{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                        <a href='{{link}}' class='btn btn-secondary me-2'>{{text}}</a>
                        {{/if}}
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="card ps-4 pt-3 mt-2  mb-3">
                {{#with seller}}
                <p>{{title}}: <b>{{value}}</b></p>
                {{/with}}
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <hr>
    <div class="mt-5">
    {{#each reviewList}}
        {{> reviewItem}}
    {{/each}}
    </div>
    <div class="mb-5">
        {{> shopaction}}
    </div>
    <hr>
</main>