<main>
    <div class="col-12 g-2">
        <div class='mb-4 display-5'>
            <b>{{header}}</b>
        </div>
        <div class="mb-5">
            {{#with purchase}}
            <div class="nav nav-tabs">
                {{#each tabs}}
                <div class="nav-item col-3">
                    <a href='#' class='nav-link {{#if @first}}active{{/if}}'>{{this}}</a>
                </div>
                {{/each}}
            </div>
            <div class="row  mt-3 mb-4">
                {{#with actionBlock}}
                <div class="col-4 pe-0">
                    {{#with input}}
                    <input type="text" class="form-control " placeholder="{{placeholder}}">
                    {{/with}}
                </div>
                <div class=" col-8">
                    {{#each buttons}}
                    {{#if isSuccess}}
                    <a href='{{link}}' class='btn btn-success me-2'>{{text}}</a>
                    {{/if}}
                    {{#if isOutline}}
                    <a href='{{link}}' class='btn btn-outline-success me-2'>{{text}}</a>
                    {{/if}}
                    {{#if isDanger}}
                    <a href='{{link}}' class='btn btn-outline-danger'>{{text}}</a>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
            </div>
            <hr>
            <div class="mt-3">
                {{#each itemList}}
                {{> purchaseItem}}
                {{/each}}
            </div>
            {{/with}}
        </div>
        <hr>
        <div class="mb-3">
            {{#with userInfo}}
            <div class=' mt-5 mb-4'>
                <h3>{{title}}</h3>
            </div>
            <div class="card p-2">
                {{#with profileData}}
                <h4>{{title}}</h4>
                <div class="card p-2 mb-4">
                    <div class="row">{{#with fullName}}
                        <div class="col-4">
                            {{#with surname}}
                            {{title}}<br>
                            <b>{{value}}</b>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with name}}
                            {{title}}<br>
                            <b>{{value}}</b>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with middleName}}
                            {{title}}<br>
                            <b>{{value}}</b>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                </div>
                <div class="card p-2 mb-4">
                    <div class="row">{{#with otherInfo}}
                        <div class="col-4">
                            {{#with birthday}}
                            {{title}}<br>
                            <b>{{value}}</b>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with sex}}
                            {{title}}<br>
                            <b>{{value}}</b>
                            {{/with}}
                        </div>
                        <div class="col-4">
                            {{#with language}}
                            {{title}}<br>
                            <b>{{value}}</b>
                            {{/with}}
                        </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
                <div class="card p-2">
                    <div class="row">{{#each buttons}}
                        <div class="col-4">
                            {{#if isPrimary}}
                            <a href='{{link}}' class='btn btn-primary me-2'>{{text}}</a>
                            {{/if}}
                            {{#if isSecondary}}
                            <a href='{{link}}' class='btn btn-outline-secondary me-2'>{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                            <a href='{{link}}' class='btn btn-outline-danger'>{{text}}</a>
                            {{/if}}
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="card p-3 mt-2">
                <div class="row">
                    {{#with recipients}}
                    <h4>{{title}}</h4>

                    {{#each users}}
                    <div class=" col-4 p-1">
                        <div class=" card p-2">
                            <b>{{name}}</b>
                            {{phone}}
                            <div>
                                {{#with button}}
                                <a href='{{link}}' class=' btn btn-primary mt-2 me-2'>{{text}}</a>
                                {{/with}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
            <div class="card  mt-2 mb-5">
                <div class="row p-3">
                    {{#with contacts}}
                    <h4>{{title}}</h4>
                    {{#with contactData}}
                    <div class=" col-4 p-1">
                        <div class=" card p-2">
                            {{#with phone}}
                            {{title}}<br>
                            <b>{{value}}</b>
                            {{/with}}
                            {{#each ../buttons}}
                            <div>
                                {{#if isPrimary}}
                                <a href='{{link}}' class='btn btn-primary mt-2 me-2'>{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class=" col-4 p-1">
                        <div class=" card p-2">
                            {{#with additionalPhone}}
                            {{title}}
                            <b>{{value}}</b>
                            {{/with}}
                            {{#each ../buttons}}
                            <div>
                                {{#if isSecondary}}
                                <a href='{{link}}' class='btn btn-outline-secondary mt-2 me-2'>{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class=" col-4 p-1">
                        <div class=" card p-2">
                            {{#with email}}
                            {{title}}
                            <b>{{value}}</b>
                            {{/with}}
                            {{#each ../buttons}}
                            <div>
                                {{#if isDanger}}
                                <a href='{{link}}' class='btn btn-outline-danger mt-2 me-2'>{{text}}</a>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    </div>
    <hr>
</main>