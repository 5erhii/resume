<main>
  <ul class='list-group list-group-flush col p-0'>

    <li class='list-group-item'>
      {{#with navigation}}
        {{#each links}}
          <a
            href='{{href}}'
            class='btn text-primary'
          >{{text}}</a>
        {{/each}}
      {{/with}}
    </li>
    <li class='list-group-item'>
      {{#with newsBlock}}
        <h3 class='text-center'>{{title}}</h3>
        <div class='row g-2'>
          {{#each cards}}
            <div class='col-3'>
              <div class='card text-bg-dark'>
                <div class='card-header'>{{title}}
                  {{#if isNew}}
                    <span
                      class='badge text-bg-success'
                    >Нова</span>
                  {{/if}}
                  {{#if isTop}}
                    <span
                      class='badge text-bg-danger'
                    >Top</span>
                  {{/if}}
                </div>
                <div class='card-body'>
                  <p class='card-text'>{{description}}</p>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </li>
    <li class='list-group-item'>
      {{#with goodsBlock}}
        <div class='nav nav-tabs mb-5'>
          {{#each tabs}}
            <div class='nav-item'>
              {{#if isActive}}
                <a
                  href='#'
                  class='nav-link active'
                >{{text}}</a>
              {{else}}
                {{#unless isDisabled}}
                  <a href='#' class='nav-link'>{{text}}</a>
                {{/unless}}
              {{/if}}
              {{#if isDisabled}}
                <a
                  href='#'
                  class='nav-link disabled'
                >{{text}}</a>
              {{/if}}
            </div>
          {{/each}}
        </div>
        <div class='row'>
          {{#each cards}}
            <div class='col-4'>
              <div class='card text-bg-dark'>
                <img src='{{image}}' />
              </div>
              <div class='card-body'>
                <h5 class='card-title'>{{title}}
                  {{#if isHot}}
                    <span
                      class='badge text-bg-danger'
                    >Hot</span>
                  {{/if}}
                  {{#if isNew}}
                    <span
                      class='badge text-bg-primary'
                    >Top</span>
                  {{/if}}
                </h5>
                <p class='card-text'>{{description}}</p>
              </div>
            </div>
          {{/each}}
        </div>
      {{/with}}
    </li>
    <li class='list-group-item'>
      <div class='mt-3 mb-3'>
        {{#with subscribe}}
          <div class='card text-bg-dark p-2'>
            <h2>{{header}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
              <span class='pb-2'>
                <a
                  href='{{link}}'
                  class='btn btn-primary'
                  role='button'
                >{{text}}</a>
              </span>
            {{/each}}
          </div>
        {{/with}}
      </div>
    </li>
    <li class='list-group-item'>
      <div class='mt-3 mb-3'>
        {{#with service}}
          <div class='card text-bg-success text-center p-2'>
            <h2>{{title}}</h2>
            <p>{{description}}</p>
            {{#each buttons}}
              <span class='pb2'>
                <a
                  href='{{link}}'
                  class='btn btn-primary'
                  role='button'
                >{{text}}</a>
              </span>
            {{/each}}
          </div>
        {{/with}}
      </div>
    </li>
    <li class='list-group-item'>
      <div class='row'>
        {{#each footer}}
          <div class='col-2'>
            {{#each this}}
              <div class='nav flex-column'>
                <div class='nav-item'>
                  {{#if @last}}
                    <a
                      href='{{link}}'
                      class='nav-link disabled'
                    >{{text}}</a>
                  {{else}}
                    <a
                      href='{{link}}'
                      class='nav-link'
                    >{{text}}</a>
                  {{/if}}
                </div>
              </div>
            {{/each}}
          </div>
        {{/each}}
      </div>
    </li>
  </ul>
</main>