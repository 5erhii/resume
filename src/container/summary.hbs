{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <div class="card p-1">
            <div class="card-header">
                {{> title data=summary.title big=true}}
            </div>
            <div>
                <p>
                    {{summary.text}}
                </p>
            </div>
        </div>

        {{#with experience}}
        <div class="card mt-2 p-1">
            <div class="card-header">
                {{> title data=title}}
            </div>
            <div>
                <p>
                    {{text}}
                </p>
            </div>
        </div>
        {{/with}}
    </main>
    {{/with}}
</div>

